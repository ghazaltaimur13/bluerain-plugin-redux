{
  "name": "@blueeast/bluerain-plugin-redux",
  "version": "0.5.3",
  "description": "Adds redux state management to BlueRain OS",
  "keywords": [],
  "main": "dist/bluerain-plugin-redux.umd.js",
  "module": "dist/bluerain-plugin-redux.es5.js",
  "typings": "dist/types/bluerain-plugin-redux.d.ts",
  "files": [
    "dist"
  ],
  "author": "BlueEast Team <code@blueeast.com>",
  "repository": {
    "type": "git",
    "url": ""
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts' 'test/**/*.ts'",
    "prebuild": "rimraf dist",
    "build": "tsc && rollup -c rollup.config.ts && rimraf compiled && bundlesize && typedoc --out dist/docs --target es6 --theme minimal src",
    "start": "tsc -w & rollup -c rollup.config.ts -w",
    "test": "jest --coverage || true",
    "test:watch": "jest --watch",
    "test:prod": "npm run lint && npm run test -- --coverage --no-cache",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage/lcov.info | coveralls && codecov",
    "commit": "git-cz",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged"
  },
  "bundlesize": [
    {
      "path": "./dist/bluerain-plugin-redux.es5.js",
      "maxSize": "18 kB"
    }
  ],
  "lint-staged": {
    "{src,test}/**/*.ts": [
      "prettier --write --use-tabs --single-quote",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    },
    "collectCoverage": true,
    "mapCoverage": true
  },
  "devDependencies": {
    "@blueeast/tslint-config-blueeast": "^0.4.0",
    "@types/jest": "^21.1.0",
    "@types/node": "^8.0.45",
    "@types/react": "^16.0.10",
    "@types/react-redux": "^5.0.10",
    "@types/redux": "^3.6.0",
    "bundlesize": "^0.15.2",
    "codecov": "^2.3.1",
    "colors": "^1.1.2",
    "commitizen": "^2.9.6",
    "coveralls": "^3.0.0",
    "cross-env": "^5.0.1",
    "cz-conventional-changelog": "^2.0.0",
    "enzyme": "^3.1.0",
    "enzyme-adapter-react-16": "^1.0.2",
    "husky": "^0.14.0",
    "jest": "^21.0.0",
    "jest-cli": "^21.2.1",
    "lint-staged": "^4.0.0",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.4.4",
    "prompt": "^1.0.0",
    "react-test-render": "^1.1.1",
    "replace-in-file": "^3.0.0-beta.2",
    "rimraf": "^2.6.1",
    "rollup": "^0.51.6",
    "rollup-plugin-commonjs": "^8.0.2",
    "rollup-plugin-node-resolve": "^3.0.0",
    "rollup-plugin-sourcemaps": "^0.4.2",
    "semantic-release": "^8.0.0",
    "ts-jest": "^21.1.3",
    "ts-node": "^3.0.6",
    "tslint": "^5.4.3",
    "typedoc": "^0.9.0",
    "typescript": "^2.3.4",
    "validate-commit-msg": "^2.12.2"
  },
  "dependencies": {
    "@blueeast/bluerain-os": "^0.5.0",
    "react": "^16.0.0",
    "react-redux": "^5.0.6",
    "react-scripts-ts": "^2.8.0",
    "redux": "^3.7.2"
  }
}
